@model IEnumerable<MyAppointment.Models.WorkOrder>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h2>Work Order/Customer Info</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table id="customers" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Customer Name</th>
                                <th>Part Number</th>
                                <th>Part Description</th>
                                <th>Return Date</th>
                                <th>Part Status</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

@section scripts {
    <script>
        $(document).ready(function () {
            var table = $("#customers").DataTable({
                ajax: {
                    url: "/WorkOrder/GetAll"
                },
                columns: [
                    { data: "customerName", "width": "20%"},
                    { data: "partNumber", "width": "20%"},
                    { data: "partDescription", "width": "20%" },
                    {
                        "data": "returnDate", "width": "20%",
                        "render": function (data) {
                            var date = new Date(data);
                            var month = date.getMonth() + 1;
                            return (month.toString().length > 1 ? month : "0" + month) + "/" + date.getDate() + "/" + date.getFullYear();
                        }
                    },
                    {
                        "data": "statusOfWorkOrder",
                        "width": "20%",
                        "render": function (data, type, row) {
                            if (row.statusOfWorkOrder == 0) {
                                return 'un completed'
                            } else {
                                return 'completed'
                            }
                        }
                    },
                ]
            });
        });
    </script>
}