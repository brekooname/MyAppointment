@model Part

<div class="d-flex" id="wrapper">

        <div class="container-fluid">
            <div class="table-responsive">
                <h2>Delete</h2>
                <h4>Customers</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form method="post" asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="CustomerName" class="control-label"></label>
                                <input asp-for="CustomerName" readonly="readonly" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="PartNumber" class="control-label"></label>
                            <input asp-for="PartNumber" readonly="readonly"  class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="PartDescription" class="control-label"></label>
                            <input asp-for="PartDescription" readonly="readonly"  class="form-control" />
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <a asp-controller="Parts" asp-action="Index" class="btn btn-secondary" style="width:150px">
                                    Back to List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
	}