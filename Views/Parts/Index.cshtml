@model IEnumerable<MyAppointment.Models.Part>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex" id="wrapper">

  @*  <partial name="_AdminNavbar" />*@
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper" class="container-fluid">

        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
        <div class="container-fluid">
            <div class="table-responsive">
                <div class="row">
                    <div class="col-lg-12">
                        <h2>Truck Inventory</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="container-fluid">
                        <table id="parts" class="table table-sm table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Part Name</th>
                                    <th>Part Number</th>
                                    <th>Part Description</th>
                                    <th>Part Price</th>
                                    <th>Part Quantity</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->

@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#parts").DataTable({
                ajax: {
                    url: "/api/parts",
                    dataSrc: ""
                },
                columns: [
                    { data: "partName" },
                    { data: "partNumber" },
                    { data: "partDescription" },
                    { data: "partPrice" },
                    { data: "numberInStock" },
                    {
                        data: "edit",
                        render: function (data, type, part) {
                            return "<a class='btn btn-warning' href='/parts/edit/" + part.id + "'> Edit</a>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn btn-danger js-delete' data-part-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });
            $("#parts").on("click", ".js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this part?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/parts/" + button.attr("data-part-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        })
                    }
                });
            });
        });

    </script>
}